# Local PostgreSQL Configuration
# Copy this file to .env when using local PostgreSQL installation

NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# Local PostgreSQL (port 5432) - Default postgres user
# Update 'yourpassword' with your actual PostgreSQL password
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/careservice_db

REDIS_URL=redis://localhost:6379

JWT_SECRET=your-local-dev-secret-key-change-in-production
JWT_EXPIRES_IN=24h

STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

USE_MOCK_MS365=true

# Speech-to-Text Configuration
ASSEMBLYAI_API_KEY=

AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=
AZURE_AD_REDIRECT_URI=http://localhost:3001/auth/callback

GRAPH_API_BASE=https://graph.microsoft.com/v1.0
SHAREPOINT_SITE_URL=

MOCK_DELAY_MS=500

CORS_ORIGIN=http://localhost:3000,http://localhost:19006
