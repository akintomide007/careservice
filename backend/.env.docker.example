# Docker PostgreSQL Configuration
# Copy this file to .env when using Docker setup

NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# Docker PostgreSQL (port 5433)
DATABASE_URL=postgresql://careuser:carepass@localhost:5433/care_provider_db

# Docker Redis (port 6381 - changed to avoid conflicts)
REDIS_URL=redis://localhost:6381

JWT_SECRET=your-local-dev-secret-key-change-in-production
JWT_EXPIRES_IN=24h

STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

USE_MOCK_MS365=true

# Speech-to-Text Configuration
ASSEMBLYAI_API_KEY=

AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=
AZURE_AD_REDIRECT_URI=http://localhost:3001/auth/callback

GRAPH_API_BASE=https://graph.microsoft.com/v1.0
SHAREPOINT_SITE_URL=

MOCK_DELAY_MS=500

CORS_ORIGIN=http://localhost:3000,http://localhost:19006
